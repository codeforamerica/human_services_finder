%header#floating-results-header.results-header

  %div.floating-content.hide
    %p
      = @search_summary_html

    %span.utility-links
      %span
        %a{ :href => '#'}
          %i{ :class => "fa fa-chevron-up" }
          Top

  = render :partial => 'component/organizations/results/header_summary', :locals => {:pages=>@pages}

-# Persistent header duplicate needed to maintain layout when header floats
%header#persistent-results-header.results-header.persistent
  = render :partial => 'component/organizations/results/header_summary', :locals => {:pages=>@pages}
