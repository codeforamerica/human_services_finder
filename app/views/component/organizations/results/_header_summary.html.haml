%div
  %div.left-column
    %span.static-content><
      - if @map_data.present?
        %a#map-view-control{ :href => '#', :class=>"button-utility button-map-zoom"}
          %i{ :class => "fa fa-plus-square" }
          Zoom map
    %p.search-summary
      %span
        = format_summary(request.query_parameters)
      %span.map-summary.static-content
        = format_map_summary

  %div.right-column
    %div.floating-content.hide><
      %span
        %a{ :href => '#', :class=>"button-utility button-top"}
          %i{ :class => "fa fa-chevron-up" }
          Top

    - unless pages[:total_pages] == 0
      = render :partial => 'component/organizations/results/pagination', :locals => {:pages=>@pages}
