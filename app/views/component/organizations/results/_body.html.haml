= render 'component/organizations/results/header'
%section#results-entries
	- if @orgs.blank?
		%p.no-results
			NO RESULTS
	- else
		-#%nav#results-view-options
			
		-#%section#results-sort-options
			-#%span
				-#Sort by:
			-#%button#name-sort-btn{:type=>"button"}>
				-#Name
			-#- if @location.blank?
				-#%button#distance-sort-btn{:type=>"button","disabled"=>"disabled"}
					-#Distance
			-#- elsif
				-#%button#distance-sort-btn{:type=>"button"}
					-#Distance
		= render 'component/organizations/results/list_view'