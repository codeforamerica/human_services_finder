%div
  .left-column

    .floating-content.hide
      %h1
        = @location.name

  .right-column

    .floating-content.hide><

      %span
        %a{ href: '#', class: 'button-utility button-top' }
          %i{ class: 'fa fa-chevron-up' }
          Top

    %span.utility-links
      %span><
        %a{ href: '#', class: 'button-utility button-print', onclick: 'window.print();return false;' }
          %i{ class: 'fa fa-print' }
          Print

      - if location[:coordinates].present?
        %span><
          %a{ class: 'button-utility button-directions', href: "https://maps.google.com/maps?saddr=current+location&daddr=#{address(location)}", target: '_blank' }
            %i{ class: 'fa fa-external-link-square' }
            %span Directions

      %span
        %a{ class: 'button-utility button-back', href: "#{locations_url(request.query_parameters)}##{location.id}", target: '_self' }
          %i{ class: 'fa fa-arrow-circle-left' }
          Back