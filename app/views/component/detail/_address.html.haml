%span{:itemtype=>"http://schema.org/PostalAddress",:itemprop=>"address"}
	
	- if org.street_address.present?
		- if lines == 2
			%span.street-address{:itemprop=>"streetAddress"}
				= superscript_ordinals(org.street_address)
			%br
		- elsif org.city.present? || org.state.present? || org.zipcode.present?
			<span class="street-address" itemprop="streetAddress">#{superscript_ordinals(org.street_address)}</span>,  
		- else
			%span.street-address{:itemprop=>"streetAddress"}
				= superscript_ordinals(org.street_address)

	- if org.city.present?
		%span.city{:itemprop=>"addressLocality"}
			= org.city + ((org.state.present? || org.zipcode.present?) ? ", " : "")
	
	- if org.state.present?
		%span.state{:itemprop=>"addressRegion"}
			= org.state
	
	- if org.zipcode.present?
		%span.zipcode{:itemprop=>"postalCode"}
			= org.zipcode