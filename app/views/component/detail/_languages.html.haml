- if org[:languages].present?
  %section{:class=>css_class_format('languages')}
    - if defined? iconclass
      %i{:class=>iconclass}
    %h1 Languages Spoken:
    %ul
      - org.languages.sort.each do |lang|
        %li
          %span
            -# Disables languages link till there's a corresponding filter that can be toggled!
              - lang_url = /.+\((.+)\)/.match(lang).nil? ? lang : /.+\((.+)\)/.match(lang)[1]
              = link_to lang, location_path(@org.id, @search_params.merge(:language => lang_url))
            = lang