- if org.key?(field)
  %section{:class=>css_class_format(field.to_s)}
    - if icon.present?
      %span{"data-icon"=>icon , :class=>"ohana-icon"}
    - if (title.present?)
      %h1 #{title}:
    - if org[field].kind_of?(Array)
      %ul
        - org[field].sort.each do |f|
          %li
            %span
              - if f.kind_of?(Array)
                %ul
                  - org[field].sort.each do |sf|
                    %li
                      %span
                        = sf
              - else
                = f
    - else
      %span
        = org[field]